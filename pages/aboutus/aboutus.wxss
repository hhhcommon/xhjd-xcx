/* pages/aboutus/aboutus.wxss */
@import '/common/css/layout.wxss';
@import '/templates/QRcode/qr-code.wxss';

.top-bg{
  background-image: url('http://www.xinhuajindian.com/xhjd-web/static/images/aboutus_header.png');
}
.column .ceo-sign{
  font-size: 35rpx;
  color: #333;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.column .ceo-sign .sign{
  width: 150rpx;
  height: auto;
}
/* 发展历程 */
.develop-history .time-line{
  padding: 80rpx 50rpx 40rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #666;
}
.develop-history .time-line .time-title{
  font-size: 30rpx;
  color: #fff;
  width: 180rpx;
  height: 75rpx;
  line-height: 75rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #FF674C;
  margin-bottom: 70rpx; 
  position: relative;
}
.develop-history .time-line .time-title::before{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50% , 100%);
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 15rpx solid #FF674C;
}
.develop-history .time-line .time-title::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate3d(-50% , 100%, 0);
  width: 1px;
  height: 70rpx;
  background: #FF674C;
}
.develop-history .time-line .incident{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: stretch;
}
.develop-history .time-line .incident > text{
  width: 50%;
  padding-bottom: 80rpx; 
}
.develop-history .time-line .incident > text:first-child{
  text-align: right;
}
.develop-history .time-line .dot{
  width: 1px;
  margin: 0 36rpx;
  background: #FF674C;
  position: relative;
}
.develop-history .time-line .dot::before{
  content: '';
  position: absolute;
  top: 5rpx;
  left: 50%;
  transform: translate(-50% , 0);
  width: 16rpx;
  height: 16rpx;
  background-color: #EF5C4C;
  border: 8rpx solid #FEE2E2;
  border-radius: 100%;
}
/* 资质认证 */
.certification .list{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.certification .list > image{
  width: 80%;
  height: auto;
}
.certification .list > text{
  font-size: 30rpx;
  color: #666;
  margin-bottom: 50rpx;
}
/* 联系我们 */
.about-contact .map{
  width: 100%;
  height: 400rpx;
}
.about-contact .contact-information{
  font-size: 30rpx;
  line-height: 1.5;
  color: #333;
  padding: 50rpx 0;
  border-bottom: 1px solid #e1e2e3;
}
.about-contact .contact-information .information-item{
  margin-bottom: 30rpx;
}
.about-contact .contact-information .phone{
  font-size: 50rpx;
}
/* 人才招聘 */
.recruit .paragraph{
  font-size: 32rpx;
}
.recruit .recruit-list{
  padding: 20rpx 0;
}
.recruit .recruit-item{
  margin-bottom: 80rpx;
}
.recruit .recruit-item .title{
  font-size: 35rpx;
  color: #FF674C;
  font-weight: 800;
  padding-bottom: 20rpx;
  position: relative;
}
.recruit .recruit-item .title::after{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 4rpx;
  height: 4rpx;
  width: 80rpx;
  background-color: #FF674C;
}
.recruit .recruit-item .content{
  font-size: 30rpx;
  color: #666;
}